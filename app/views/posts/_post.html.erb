<div class="post">

  <div class="post-title">
    <a href="<%= post.path %>">
      <%= post.title %>
    </a>
  </div>

  <% if post.show_date == true %>
    <div class="post-date">
      <%= post.created_at.strftime("%B %e, %Y") %>
    </div>
  <% end %>

  <div class="post-content">
    <%= post.rendered_content %>
  </div>

</div>
